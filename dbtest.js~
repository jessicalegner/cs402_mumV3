var mongoose = require('mongoose');

mongoose.connect('mongodb://localhost/cs402mum',function(err){
	if (err){
		throw err;
	}
});

//Creation de mon shema de BDD 
var myschema = new mongoose.Schema({
	"login": String,
	"password": String
	//"buddies": [type: string]
});

var credentialModel = mongoose.model('credential', myschema);

var entry = new credentialModel({"login": "dylan","password": "totoestunsuperhero"});

entry.save(function(err){
	
	if(err){ 
	throw err;
	}
	console.log('user added with success');
	
	
});


credentialModel.find({"login":"seb"},function(err,users){
	
	if(err){ 
	throw err;
	}
	console.log(users);
	mongoose.connection.close();
});



